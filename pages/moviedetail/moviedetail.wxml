<!--pages/moviedetail/moviedetail.wxml-->
<view class="movice_contain">
<image class="movice_image" src='{{movieDetail.images.large}}'></image>
<text class="movice_name">{{movieDetail.original_title}}</text>
    <view class="movice_detail">
        <text>评分: {{movieDetail.rating.average}}</text>
        <text>导演：{{movieDetail.directors[0].name}}</text>
        <text>主演: {{movieDetail.casts[0].name}} {{movieDetail.casts[1].name}}</text>
    </view>
<button class="buttonClass">我要观影</button>
</view>
